<div class="container w-50 p-5 my-5 bg-white shadow-sm">
  <h1>Add your book</h1>

  <%= simple_form_for(@book) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :genre %>
    <%= f.input :summary, label: "Description" %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn-black" %>
  </div>
  <% end %>
</div>
